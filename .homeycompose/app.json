{
  "id": "com.athom.matter-bridge",
  "version": "0.4.0",
  "compatibility": ">=12.9.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "brandColor": "#000000",
  "name": {
    "en": "Matter Bridge"
  },
  "description": {
    "en": "Expose Homey Pro's devices to Matter."
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Emile Nijssen",
    "email": "emile@athom.nl"
  },
  "support": "mailto:emile@athom.nl",
  "source": "https://github.com/athombv/com.athom.matter-bridge",
  "api": {
    "getState": {
      "method": "GET",
      "path": "/state"
    },
    "getDevices": {
      "method": "GET",
      "path": "/devices"
    },
    "enableDevice": {
      "method": "POST",
      "path": "/devices/enable",
      "body": {
        "deviceId": "string"
      }
    },
    "disableDevice": {
      "method": "POST",
      "path": "/devices/disable",
      "body": {
        "deviceId": "string"
      }
    }
  }
}